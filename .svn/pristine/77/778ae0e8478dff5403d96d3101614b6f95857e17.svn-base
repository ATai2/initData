                {
                    string sql = "EXEC sp_rename '" + tableName + "','" + tableName + DateTime.Today + "'";
                    var cmd = new SqlCommand(sql, remoteConn);
                    cmd.ExecuteNonQuery();
                    slog.Info("表" + tableName + "重命名成功！");
                }
                catch (Exception)
                {
                    slog.Error("表" + tableName + "重命名失败！");
                }
                CreatTableByName(tableName);
            }


